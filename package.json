{
    "name": "infuse-monorepo",
    "version": "1.0.0",
    "description": "Monorepo para projetos Infuse Tecnologia",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "backend:start": "cd packages/backend && ./docker-start.sh",
        "backend:dev": "cd packages/backend && ./dev-setup.sh",
        "frontend:dev": "cd packages/frontend && npm run dev",
        "frontend:build": "cd packages/frontend && npm run build",
        "setup": "npm install && cd packages/backend && npm install && npm run prepare",
        "format:backend": "cd packages/backend && ./format-code.sh"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "author": "",
    "license": "ISC"
}